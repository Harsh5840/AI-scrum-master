# Database Configuration (Using Neon PostgreSQL or your preferred provider)
DATABASE_URL="postgresql://user:password@host:port/database?sslmode=require"

# Redis Configuration (Local or Upstash)
REDIS_URL="redis://localhost:6379"

# Upstash Redis REST API (Alternative to Redis protocol)
UPSTASH_REDIS_REST_URL="https://your-redis.upstash.io"
UPSTASH_REDIS_REST_TOKEN="your-upstash-token"

# Application Configuration
PORT=5000
NODE_ENV=development
FRONTEND_URL="http://localhost:3000"

# JWT Configuration (Generate secure secrets with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))")
JWT_SECRET="your-jwt-secret-here"
JWT_REFRESH_SECRET="your-jwt-refresh-secret-here"
JWT_EXPIRES_IN="7d"
JWT_REFRESH_EXPIRES_IN="30d"

# Google Gemini Configuration (Get key from: https://makersuite.google.com/app/apikey)
GEMINI_API_KEY="your-gemini-api-key"

# Pinecone Configuration (Optional - for vector search/RAG)
PINECONE_API_KEY="your-pinecone-api-key"
PINECONE_INDEX_NAME="ai-scrum-master"
PINECONE_ENVIRONMENT="us-east-1-aws"

# Google OAuth Configuration (Optional - Get from: https://console.cloud.google.com/apis/credentials)
GOOGLE_CLIENT_ID="your-google-oauth-client-id"
GOOGLE_CLIENT_SECRET="your-google-oauth-client-secret"
GOOGLE_REDIRECT_URI="http://localhost:5000/api/auth/google/callback"
GOOGLE_CALLBACK_URL="http://localhost:5000/api/auth/google/callback"

# Slack Integration (Optional)
SLACK_TOKEN="your-slack-token"

# Jira Integration (Optional)
JIRA_API_TOKEN="your-jira-api-token"
JIRA_DOMAIN="your-company.atlassian.net"
JIRA_EMAIL="your-email@example.com"

# Session Secret (Generate with: node -e "console.log(require('crypto').randomUUID())")
SESSION_SECRET="your-session-secret-uuid"
