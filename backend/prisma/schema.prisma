// Prisma schema for AI Scrum Master

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

// ============== ORGANIZATION & TEAM ==============

model Organization {
  id          Int      @id @default(autoincrement())
  name        String
  slug        String   @unique
  logo        String?
  plan        String   @default("free") // free, pro, enterprise
  members     Member[]
  sprints     Sprint[]
  standups    Standup[]
  blockers    Blocker[]
  invites     Invite[]
  integrations Integration[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@map("organizations")
}

model Member {
  id        Int          @id @default(autoincrement())
  userId    Int
  orgId     Int
  role      String       @default("member") // owner, admin, member
  user      User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  org       Organization @relation(fields: [orgId], references: [id], onDelete: Cascade)
  createdAt DateTime     @default(now())
  
  @@unique([userId, orgId])
  @@map("members")
}

model Invite {
  id        Int          @id @default(autoincrement())
  email     String
  orgId     Int
  role      String       @default("member")
  token     String       @unique @default(uuid())
  status    String       @default("pending") // pending, accepted, expired
  invitedBy Int
  expiresAt DateTime
  org       Organization @relation(fields: [orgId], references: [id], onDelete: Cascade)
  inviter   User         @relation("InvitesSent", fields: [invitedBy], references: [id])
  createdAt DateTime     @default(now())
  
  @@map("invites")
}

model Integration {
  id          Int          @id @default(autoincrement())
  orgId       Int
  type        String       // slack, jira, github, notion
  accessToken String?
  config      Json?
  status      String       @default("active") // active, disconnected
  org         Organization @relation(fields: [orgId], references: [id], onDelete: Cascade)
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  
  @@unique([orgId, type])
  @@map("integrations")
}

// ============== USER ==============

model User {
  id            Int        @id @default(autoincrement())
  name          String
  email         String     @unique
  password      String?    // Optional for OAuth users
  googleId      String?    @unique
  avatar        String?
  currentOrgId  Int?       // Active organization context
  memberships   Member[]
  standups      Standup[]  
  refreshTokens RefreshToken[]
  invitesSent   Invite[]   @relation("InvitesSent")
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
  
  @@map("users")  
}

model RefreshToken {
  id        Int      @id @default(autoincrement())
  token     String   @unique
  userId    Int
  expiresAt DateTime
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("refresh_tokens")
}

// ============== STANDUPS & BLOCKERS ==============

model Standup {
  id          Int           @id @default(autoincrement())
  userId      Int
  orgId       Int?
  summary     String
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt  
  user        User          @relation(fields: [userId], references: [id])
  org         Organization? @relation(fields: [orgId], references: [id])
  sprint      Sprint?       @relation("SprintStandups", fields: [sprintId], references: [id])
  sprintId    Int?
  blockers    Blocker[]     @relation("StandupBlockers")
  
  @@map("standups")
}

model Blocker {
  id          Int           @id @default(autoincrement())
  standupId   Int?
  orgId       Int?
  type        String        // "dependency", "technical", "resource", "external"
  severity    String        // "low", "medium", "high", "critical"
  description String
  status      String        // "active", "resolved", "escalated"
  detectedAt  DateTime      @default(now())
  resolvedAt  DateTime?
  
  standup     Standup?      @relation("StandupBlockers", fields: [standupId], references: [id])
  org         Organization? @relation(fields: [orgId], references: [id])
  
  @@map("blockers")
}

// ============== SPRINTS & BACKLOG ==============

model Sprint {
  id           Int           @id @default(autoincrement())
  name         String
  orgId        Int?
  startDate    DateTime
  endDate      DateTime
  standups     Standup[]     @relation("SprintStandups")
  backlogItems BacklogItem[]
  org          Organization? @relation(fields: [orgId], references: [id])
  
  @@map("sprints")
}

model BacklogItem {
  id          Int      @id @default(autoincrement())
  title       String
  description String?
  completed   Boolean  @default(false)
  sprintId    Int?
  sprint      Sprint?  @relation(fields: [sprintId], references: [id])
  storyPoints Int?     @default(0)
  priority    String?  @default("medium") // low, medium, high
  status      String?  @default("todo") // todo, in-progress, done
  assignee    String?
  tags        String[] @default([])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@map("backlog_items")
}
